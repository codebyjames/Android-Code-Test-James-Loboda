<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVeryLightGray"
    android:orientation="vertical">

    <!-- top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- back -->
        <TextView
            android:id="@+id/text_contact_detail_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Back"
            android:textColor="@color/colorDarkGray"
            android:textSize="20sp" />

        <!-- space -->
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <!-- edit -->
        <TextView
            android:id="@+id/text_contact_detail_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="Edit"
            android:textColor="@color/colorDarkGray"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <!-- name/call -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!--  names -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <!-- first -->
                <TextView
                    android:id="@+id/text_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="first name"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="25sp" />

                <!-- last -->
                <TextView
                    android:id="@+id/text_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="last name"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="25sp" />

            </LinearLayout>

            <!-- call/text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <!-- call -->
                <ImageView
                    android:id="@+id/button_call"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call_white_48dp"
                    android:tint="@color/colorVeryLightGray"
                    android:padding="3dp"/>

                <!-- message -->
                <ImageView
                    android:id="@+id/button_message"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_message_white_48dp"
                    android:tint="@color/colorVeryLightGray"
                    android:padding="3dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- birthday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@color/colorLightGray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!-- title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="birthday"
                android:textColor="@color/colorVeryLightGray"
                android:textSize="20sp" />

            <!-- month -->
            <TextView
                android:id="@+id/text_birthday_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="month"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/colorVeryLightGray"
                android:textColorHint="@color/colorDarkGray"
                android:textSize="20sp" />

            <!-- divider -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.012"
                android:alpha="0.2"
                android:background="@color/colorDarkGray"
                android:orientation="vertical" />

            <!-- day -->
            <TextView
                android:id="@+id/text_birthday_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="day"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/colorVeryLightGray"
                android:textColorHint="@color/colorDarkGray"
                android:textSize="20sp" />

            <!-- divider -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.012"
                android:alpha="0.2"
                android:background="@color/colorDarkGray"
                android:orientation="vertical" />

            <!-- year -->
            <TextView
                android:id="@+id/text_birthday_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="year"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/colorVeryLightGray"
                android:textColorHint="@color/colorDarkGray"
                android:textSize="20sp" />

            <!-- divider -->
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.012" />

        </LinearLayout>

        <!-- divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.012"
            android:background="@color/colorLightGray"
            android:orientation="vertical" />

        <!-- lists -->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:gravity="center"
                android:orientation="vertical">

                <!-- phones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="Phone Numbers"
                        android:textColor="@color/colorLightGray"
                        android:textSize="20sp" />

                    <!-- list phones -->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_list_phones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- emails -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="Emails"
                        android:textColor="@color/colorLightGray"
                        android:textSize="20sp" />

                    <!-- list phones -->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_list_emails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:text="Addresses"
                        android:textColor="@color/colorLightGray"
                        android:textSize="20sp" />

                    <!-- list addresses -->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_list_addresses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>